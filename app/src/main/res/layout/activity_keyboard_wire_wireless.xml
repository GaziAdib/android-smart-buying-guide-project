<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e1e1e"
    tools:context=".KeyboardTechnology.KeyboardWireWireless">

    <LinearLayout
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:backgroundTint="#f1f1f1"
            app:cardCornerRadius="5dp"
            android:layout_margin="4dp"
            app:cardElevation="8dp"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textIsSelectable="true"
                android:elevation="10dp"
                android:padding="5dp"
                android:background="#1e1e1e"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="#f5f5f5"
                android:textStyle="bold"
                android:text="Keyboard Wire / Wireless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textIsSelectable="true"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="50dp"
                android:textAlignment="textStart"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textSize="17sp"
                android:textColor="#515151"
                android:textStyle="normal"
                android:text="The wired and wireless configurations both have their pros and cons.The wireless configuration cuts the cord out that clutters your desk but there are chances that it interferes with other wireless devices.\n\n
For gaming, the wired keyboards are preferred since the wireless keyboards tend to lag which impedes gameplay. Wireless keyboards are battery powered, which needs to be charged or replaced from time to time. \n\nThat adds to the cost. Therefore, a keyboard that supports both wired and wireless configurations are preferred by many who want the best of both worlds.
"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </android.support.v7.widget.CardView>










    </LinearLayout>

</ScrollView>