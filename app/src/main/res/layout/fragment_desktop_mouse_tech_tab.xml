<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F7F7F7"
    tools:context=".DesktopMouseActivity.DesktopMouseActivity">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:layout_margin="3dp"
                android:background="@drawable/desktop_mouse_main_theme"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="220dp" />


            <View

                android:visibility="visible"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>

            <TextView

                android:fontFamily="serif"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#d6fff5"
                android:layout_margin="5dp"
                android:background="@drawable/main_card_bg"
                android:textAlignment="center"
                android:padding="12dp"
                android:text="Mouse Technologies"
                android:layout_width="match_parent"
                android:layout_height="50dp" />


            <GridLayout
                android:layout_marginTop="5dp"
                android:columnCount="2"
                android:rowCount="3"
                android:columnOrderPreserved="false"
                android:alignmentMode="alignMargins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/desktopMouseTypesId"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:backgroundTint="#008f6f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:elevation="6dp"
                    app:cardElevation="12dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="12dp"
                    >

                    <LinearLayout
                        android:backgroundTint="@color/intro_gradient_end_color"
                        android:background="@drawable/main_card_bg"
                        android:padding="15dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/desktop_mouse_main_icon_png"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />

                        <TextView
                            android:backgroundTint="#FDFCFC"
                            android:padding="2dp"
                            android:textAlignment="center"
                            android:background="@drawable/bg_card_footer"
                            android:text="Types of mouse"
                            android:layout_marginTop="12dp"
                            android:textColor="#2C2C2C"
                            android:textSize="17dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />



                    </LinearLayout>

                </android.support.v7.widget.CardView>





                <android.support.v7.widget.CardView
                    android:id="@+id/desktopMouseGamingId"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:backgroundTint="#008f6f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:elevation="6dp"
                    app:cardElevation="12dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="12dp"
                    >

                    <LinearLayout
                        android:backgroundTint="@color/intro_gradient_end_color"
                        android:background="@drawable/main_card_bg"
                        android:padding="15dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/desktop_mouse_main_icon_png"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />

                        <TextView
                            android:backgroundTint="#FDFCFC"
                            android:padding="2dp"
                            android:textAlignment="center"
                            android:background="@drawable/bg_card_footer"
                            android:text="Gaming mouse"
                            android:layout_marginTop="12dp"
                            android:textColor="#2C2C2C"
                            android:textSize="17dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />



                    </LinearLayout>

                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:id="@+id/desktopMouseDurabilityId"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:backgroundTint="#008f6f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:elevation="6dp"
                    app:cardElevation="12dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="12dp"
                    >

                    <LinearLayout
                        android:backgroundTint="@color/intro_gradient_end_color"
                        android:background="@drawable/main_card_bg"
                        android:padding="15dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/desktop_mouse_main_icon_png"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />

                        <TextView
                            android:backgroundTint="#FDFCFC"
                            android:padding="2dp"
                            android:textAlignment="center"
                            android:background="@drawable/bg_card_footer"
                            android:text="Durability"
                            android:layout_marginTop="12dp"
                            android:textColor="#2C2C2C"
                            android:textSize="17dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />



                    </LinearLayout>

                </android.support.v7.widget.CardView>





                <android.support.v7.widget.CardView
                    android:id="@+id/desktopMouseDpiId"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:backgroundTint="#008f6f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:elevation="6dp"
                    app:cardElevation="12dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="12dp"
                    >

                    <LinearLayout
                        android:backgroundTint="@color/intro_gradient_end_color"
                        android:background="@drawable/main_card_bg"
                        android:padding="15dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/desktop_mouse_main_icon_png"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />

                        <TextView
                            android:backgroundTint="#FDFCFC"
                            android:padding="2dp"
                            android:textAlignment="center"
                            android:background="@drawable/bg_card_footer"
                            android:text="DPI"
                            android:layout_marginTop="12dp"
                            android:textColor="#2C2C2C"
                            android:textSize="17dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />



                    </LinearLayout>

                </android.support.v7.widget.CardView>













                <android.support.v7.widget.CardView
                    android:id="@+id/desktopMouseDesignBuildId"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:backgroundTint="#008f6f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:elevation="6dp"
                    app:cardElevation="12dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="12dp"
                    >

                    <LinearLayout
                        android:backgroundTint="@color/intro_gradient_end_color"
                        android:background="@drawable/main_card_bg"
                        android:padding="15dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/desktop_mouse_main_icon_png"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />
                        <TextView
                            android:backgroundTint="#FDFCFC"
                            android:padding="2dp"
                            android:textAlignment="center"
                            android:background="@drawable/bg_card_footer"
                            android:text="Design/Build"
                            android:layout_marginTop="12dp"
                            android:textColor="#2C2C2C"
                            android:textSize="17dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />



                    </LinearLayout>

                </android.support.v7.widget.CardView>






            </GridLayout>






        </LinearLayout>


    </ScrollView>


</FrameLayout>