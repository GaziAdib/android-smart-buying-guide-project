<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@drawable/bgapps"
    android:backgroundTint="#760606"
    android:backgroundTintMode="add"
    tool:context=".LaptopBrandSelection">



        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
              android:layout_marginTop="-10dp"
                app:cardBackgroundColor="#F04E4E"
                android:elevation="10dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"

                >




                <LinearLayout

                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.smarteist.autoimageslider.SliderLayout
                            android:id="@+id/imageSliderLaptopBrands"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"/>




                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>





                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/asusLaptopCardViewId"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="8dp"
                        android:elevation="14dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:padding="20sp"
                                android:background="@drawable/vector_circular_bg_laptop"
                                android:layout_margin="25sp"
                                android:src="@drawable/laptop_dashboard"
                                android:scaleType="centerCrop"
                                android:layout_width="100dp"
                                android:layout_height="100dp" />

                            <TextView
                                android:textSize="40sp"
                                android:text="ASUS"
                                android:layout_marginLeft="-40dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#fff"
                                android:textStyle="italic"
                                android:fontFamily="sans-serif"
                                android:textAlignment="center"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>




                    <android.support.v7.widget.CardView
                        android:id="@+id/appleLaptopCardViewId"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="8dp"
                        android:elevation="14dp"
                        app:cardBackgroundColor="#4B3BE1"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:padding="20sp"
                                android:background="@drawable/vector_circular_bg_laptop"
                                android:layout_margin="25sp"
                                android:src="@drawable/laptop_dashboard"
                                android:scaleType="centerCrop"
                                android:layout_width="100dp"
                                android:layout_height="100dp" />

                            <TextView
                                android:textSize="40sp"
                                android:text="Apple"
                                android:layout_marginLeft="-40dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#fff"
                                android:textStyle="italic"
                                android:fontFamily="sans-serif"
                                android:textAlignment="center"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>



                    <android.support.v7.widget.CardView
                        android:id="@+id/acerLaptopCardViewId"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="8dp"
                        android:elevation="14dp"
                        app:cardBackgroundColor="#75AE00"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:padding="20sp"
                                android:background="@drawable/vector_circular_bg_laptop"
                                android:layout_margin="25sp"
                                android:src="@drawable/laptop_dashboard"
                                android:scaleType="centerCrop"
                                android:layout_width="100dp"
                                android:layout_height="100dp" />

                            <TextView
                                android:textSize="40sp"
                                android:text="Acer"
                                android:layout_marginLeft="-40dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#fff"
                                android:textStyle="italic"
                                android:fontFamily="sans-serif"
                                android:textAlignment="center"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/razorLaptopCardViewId"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="8dp"
                        android:elevation="14dp"
                        app:cardBackgroundColor="#2f6400"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:padding="20sp"
                                android:background="@drawable/vector_circular_bg_laptop"
                                android:layout_margin="25sp"
                                android:src="@drawable/laptop_dashboard"
                                android:scaleType="centerCrop"
                                android:layout_width="100dp"
                                android:layout_height="100dp" />

                            <TextView
                                android:textSize="40sp"
                                android:text="RAZOR"
                                android:layout_marginLeft="-40dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#fff"
                                android:textStyle="italic"
                                android:fontFamily="sans-serif"
                                android:textAlignment="center"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>




                    <android.support.v7.widget.CardView
                        android:id="@+id/msiLaptopCardViewId"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="8dp"
                        android:elevation="14dp"
                        app:cardBackgroundColor="#d61200"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:padding="20sp"
                                android:background="@drawable/vector_circular_bg_laptop"
                                android:layout_margin="25sp"
                                android:src="@drawable/laptop_dashboard"
                                android:scaleType="centerCrop"
                                android:layout_width="100dp"
                                android:layout_height="100dp" />

                            <TextView
                                android:textSize="40sp"
                                android:text="MSI"
                                android:layout_marginLeft="-40dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#fff"
                                android:textStyle="italic"
                                android:fontFamily="sans-serif"
                                android:textAlignment="center"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>





                    <android.support.v7.widget.CardView
                        android:id="@+id/dellLaptopCardViewId"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="8dp"
                        android:elevation="14dp"
                        app:cardBackgroundColor="#0560cf"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:padding="20sp"
                                android:background="@drawable/vector_circular_bg_laptop"
                                android:layout_margin="25sp"
                                android:src="@drawable/laptop_dashboard"
                                android:scaleType="centerCrop"
                                android:layout_width="100dp"
                                android:layout_height="100dp" />

                            <TextView
                                android:textSize="40sp"
                                android:text="DELL"
                                android:layout_marginLeft="-40dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#fff"
                                android:textStyle="italic"
                                android:fontFamily="sans-serif"
                                android:textAlignment="center"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>








                    <android.support.v7.widget.CardView
                        android:id="@+id/hpLaptopCardViewId"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="8dp"
                        android:elevation="14dp"
                        app:cardBackgroundColor="#8900c9"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:padding="20sp"
                                android:background="@drawable/vector_circular_bg_laptop"
                                android:layout_margin="25sp"
                                android:src="@drawable/laptop_dashboard"
                                android:scaleType="centerCrop"
                                android:layout_width="100dp"
                                android:layout_height="100dp" />

                            <TextView
                                android:textSize="40sp"
                                android:text="HP"
                                android:layout_marginLeft="-40dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#fff"
                                android:textStyle="italic"
                                android:fontFamily="sans-serif"
                                android:textAlignment="center"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>












                </LinearLayout>










        </LinearLayout>








</ScrollView>