<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:layout_gravity="center"
    android:background="#a4ffffff"
    tools:context=".SmartphoneSelectionTechOrBrand">

    <LinearLayout
        android:layout_margin="2dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="#490091"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Know Technology"
            android:textIsSelectable="true"
            android:textColor="#f9f9f9"
            android:layout_marginTop="25sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.CardView
            android:backgroundTint="#6646EC"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:elevation="10dp"
            app:cardElevation="12dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/smartphoneTechnologySelectId"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="215dp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:elevation="10dp"
                    android:src="@drawable/smartphone_tech_round_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="136dp"
                    android:layout_height="136dp"
                    />

                <View
                    android:elevation="6dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/smartphone_tech_view_horizontal"
                    android:layout_width="1.5dp"
                    android:layout_height="180dp">

                </View>


                <LinearLayout
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginLeft="18dp"
                        android:elevation="8dp"
                        android:layout_marginTop="28dp"
                        android:textSize="35sp"
                        android:text="EXPLORE"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <View
                        android:elevation="6dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/smartphone_tech_view_horizontal"
                        android:layout_width="245dp"
                        android:layout_height="3dp">

                    </View>

                    <TextView

                        android:elevation="8dp"
                        android:layout_gravity="center"
                        android:background="#ffffff"
                        android:layout_marginTop="20dp"
                        android:textSize="27sp"
                        android:text="TECHNOLOGY"
                        android:textStyle="normal"
                        android:textAlignment="center"
                        android:textColor="#7f04fb"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#303030"
            android:textSize="20dp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Select Smartphone Brands"
            android:textIsSelectable="true"
            android:textColor="#ffffff"
            android:layout_marginTop="25dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:backgroundTint="#ec4e46"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginTop="35dp"
            android:elevation="10dp"
            app:cardElevation="12dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/smartphoneBrandSelectId"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="215dp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:elevation="10dp"
                    android:src="@drawable/smartphone_brand_select_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="136dp"
                    android:layout_height="136dp"
                    />

                <View
                    android:elevation="6dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/smartphone_tech_view_horizontal"
                    android:layout_width="1.5dp"
                    android:layout_height="180dp">

                </View>


                <LinearLayout
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginLeft="25dp"
                        android:elevation="8dp"
                        android:layout_marginTop="28dp"
                        android:textSize="36sp"
                        android:text="SELECT"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <View
                        android:elevation="6dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/smartphone_tech_view_horizontal"
                        android:layout_width="245dp"
                        android:layout_height="3dp">

                    </View>

                    <TextView

                        android:elevation="8dp"
                        android:layout_gravity="center"
                        android:background="#ffffff"
                        android:layout_marginTop="20dp"
                        android:textSize="30sp"
                        android:text="BRANDS"
                        android:textStyle="normal"
                        android:textAlignment="center"
                        android:textColor="#ec4e46"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>



</ScrollView>