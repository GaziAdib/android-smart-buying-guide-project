<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LaptopChooseActivity">



    <TextView
        android:text="Choose Your Action"
        android:layout_gravity="center"
        android:textSize="27sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#565656"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:id="@+id/laptopGuideCardView"
        android:layout_margin="15dp"
        app:cardBackgroundColor="#FF5151"
        android:elevation="15dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"

        >




        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:background="@drawable/vector_circular_bg_laptop"
                android:src="@drawable/monitor_resolution_card_image"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="110dp"
                android:layout_height="110dp" />

            <TextView
                android:layout_marginLeft="-10dp"
                android:fontFamily="cursive"
                android:textColor="#ffffff"
                android:text="Laptop Guide"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="35sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/laptopBrandsCardView"
        android:layout_margin="15dp"
        android:layout_marginTop="100dp"
        app:cardBackgroundColor="#4f03c2"
        android:elevation="15dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"

        >




        <LinearLayout

            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:background="@drawable/vector_circular_bg_laptop"
                android:src="@drawable/monitor_resolution_card_image"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="110dp"
                android:layout_height="110dp" />

            <TextView
                android:layout_marginLeft="-10dp"
                android:fontFamily="cursive"
                android:textColor="#ffffff"
                android:text="Laptop Brands"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="35sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>







</LinearLayout>