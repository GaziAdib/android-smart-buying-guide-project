<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FireBaseBackend.activity.PostActivity"
    android:weightSum="10"
    android:orientation="vertical">

    <TextView
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:textColor="@color/white"
        android:id="@+id/postCategoryTitle"
        android:text="PostActivity"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <ImageView
        android:padding="10dp"
        android:id="@+id/postImage"
        android:src="@drawable/ic_television"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <EditText
        android:layout_margin="10dp"
        android:layout_weight=".7"
        android:background="@drawable/reg_edittext_style"
        android:hint="Product ID"
        android:layout_gravity="center"
        android:id="@+id/postProductID"
        android:layout_width="265dp"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textPersonName" />
    <EditText
        android:layout_margin="10dp"
        android:layout_weight=".7"
        android:background="@drawable/reg_edittext_style"
        android:hint="Product Name"
        android:layout_gravity="center"
        android:id="@+id/postName"
        android:layout_width="265dp"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textPersonName" />
    <Spinner

        android:id="@+id/postSpinnerAddCategory"
        android:layout_gravity="center"
        android:layout_width="265dp"
        android:layout_height="0dp"
        android:layout_weight=".73"
        android:background="@drawable/spinner_back"
        android:popupBackground="#f7f7f7"
        android:spinnerMode="dropdown" />
    <Spinner
        android:visibility="gone"
        android:id="@+id/postSpinnerAddComponent"
        android:layout_gravity="center"
        android:layout_width="265dp"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:background="@drawable/spinner_back"
        android:popupBackground="#f7f7f7"
        android:spinnerMode="dropdown" />
    <EditText
        android:visibility="gone"
        android:layout_margin="10dp"
        android:layout_weight=".7"
        android:background="@drawable/reg_edittext_style"
        android:hint="Screen Size"
        android:layout_gravity="center"
        android:id="@+id/postScreenSize"
        android:layout_width="265dp"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textPersonName" />
    <EditText
        android:layout_margin="10dp"
        android:layout_weight=".7"
        android:background="@drawable/reg_edittext_style"
        android:hint="Add Description"
        android:layout_gravity="center"
        android:maxLines="3"
        android:id="@+id/postAddDescription"
        android:layout_width="265dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:ems="10"
        android:maxLength ="2000"
        android:inputType="textCapSentences|textMultiLine" />
    <EditText
        android:layout_margin="10dp"
        android:layout_weight=".7"
        android:background="@drawable/reg_edittext_style"
        android:hint="Add Price"
        android:layout_gravity="center"
        android:id="@+id/postAddPrice"
        android:layout_width="265dp"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textPersonName" />
    <EditText
        android:layout_margin="10dp"
        android:layout_weight=".7"
        android:background="@drawable/reg_edittext_style"
        android:hint="Recommendation"
        android:layout_gravity="center"
        android:id="@+id/recommendation"
        android:layout_width="265dp"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/postSubmitBtn"
        android:layout_width="300dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/main_card_bg"
        android:backgroundTint="@color/intro_gradient_start_color"
        android:ems="10"
        android:fontFamily="serif"
        android:text="Submit Post"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>