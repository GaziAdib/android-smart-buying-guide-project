<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#673AB7"
    tools:context=".MouseTechnology.DesktopMouseTypes">

    <LinearLayout
        android:background="@drawable/main_card_bg"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.v7.widget.CardView

            android:layout_margin="2dp"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="6dp"
            app:cardElevation="8dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textIsSelectable="true"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="23sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:text="Types of Mouse"/>



                <android.support.v7.widget.CardView
                    android:layout_margin="2dp"
                    android:elevation="4dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <LinearLayout
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:src="@drawable/tv_display_types"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                </android.support.v7.widget.CardView>



                <TextView
                    android:textIsSelectable="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:padding="3dp"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textAlignment="textStart"
                    android:text="@string/desktop_mouse_types_intro"/>









                <android.support.v7.widget.CardView
                    android:layout_margin="2dp"
                    android:elevation="4dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <LinearLayout
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_margin="2dp"
                            android:layout_gravity="center"
                            android:src="@drawable/mouse_types_wired_wireless"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                </android.support.v7.widget.CardView>



                <TextView
                    android:textIsSelectable="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:padding="3dp"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textAlignment="textStart"
                    android:text="@string/desktop_mouse_types_wire_vs_wireless"/>
















                <android.support.v7.widget.CardView
                    android:layout_margin="2dp"
                    android:elevation="4dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <LinearLayout
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_margin="2dp"
                            android:layout_gravity="center"
                            android:src="@drawable/mouse_types_bluetooth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                </android.support.v7.widget.CardView>



                <TextView
                    android:textIsSelectable="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:padding="3dp"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textAlignment="textStart"
                    android:text="@string/desktop_mouse_types_bluetooth_wireless"/>












                <android.support.v7.widget.CardView
                    android:layout_margin="2dp"
                    android:elevation="4dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <LinearLayout
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_margin="2dp"
                            android:layout_gravity="center"
                            android:src="@drawable/mouse_types_laser_optical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                </android.support.v7.widget.CardView>



                <TextView
                    android:textIsSelectable="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:padding="3dp"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textAlignment="textStart"
                    android:text="@string/desktop_mouse_types_laser_vs_optical"/>










                <android.support.v7.widget.CardView
                    android:layout_margin="2dp"
                    android:elevation="4dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <LinearLayout
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_margin="2dp"
                            android:layout_gravity="center"
                            android:src="@drawable/mouse_types_ergonomics"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                </android.support.v7.widget.CardView>



                <TextView
