<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:background="#2B2929"
    android:layout_height="fill_parent"
    tools:context=".SecurityPageContainer">


    <LinearLayout
        android:layout_margin="2dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textIsSelectable="true"
            android:textAllCaps="false"
            android:text="Security Check"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.CardView

            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/security_smartphone_card_id"
            android:layout_marginTop="10dp"
            android:elevation="6dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:layout_width="350dp"
            android:layout_height="140dp">

            <LinearLayout
                android:backgroundTint="@color/colorPrimaryDark"
                android:background="@drawable/card_main_background"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="2dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/smartphone_dashboard"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />



                    <ImageView
                        android:src="@drawable/youtube_videos_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />


                </LinearLayout>

                <TextView
                    android:layout_gravity="bottom"
                    android:textSize="20sp"
                    android:textColor="#444444"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:text="Smartphone Check"
                    android:background="@drawable/bg_card_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="2dp"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>






        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/security_laptop_card_id"
            android:layout_marginTop="10dp"
            android:elevation="6dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:layout_width="350dp"
            android:layout_height="140dp">

            <LinearLayout
                android:backgroundTint="#1DDD9B"
                android:background="@drawable/card_main_background"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="10dp"
                        android:src="@drawable/laptop_dashboard"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />



                    <ImageView
                        android:src="@drawable/youtube_videos_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />


                </LinearLayout>

                <TextView
                    android:layout_gravity="bottom"
                    android:textSize="20sp"
                    android:textColor="#444444"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:text="Laptop Check"
                    android:background="@drawable/bg_card_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="2dp"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/security_tv_card_id"
            android:layout_marginTop="10dp"
            android:elevation="6dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:layout_width="350dp"
            android:layout_height="140dp">

            <LinearLayout
                android:backgroundTint="#2891E4"
                android:background="@drawable/card_main_background"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="10dp"
                        android:src="@drawable/tv_dashboard"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />



                    <ImageView
                        android:src="@drawable/youtube_videos_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />


                </LinearLayout>

                <TextView
                    android:layout_gravity="bottom"
                    android:textSize="20sp"
                    android:textColor="#444444"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:text="TV Check"
                    android:background="@drawable/bg_card_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="2dp"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/security_desktop_card_id"
            android:layout_marginTop="10dp"
            android:elevation="6dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:layout_width="350dp"
            android:layout_height="140dp">

            <LinearLayout
                android:backgroundTint="#F44336"
                android:background="@drawable/card_main_background"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="10dp"
                        android:src="@drawable/desktop_dashboard"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                    <ImageView
                        android:src="@drawable/youtube_videos_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />


                </LinearLayout>

                <TextView
                    android:layout_gravity="bottom"
                    android:textSize="20sp"
                    android:textColor="#444444"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:text="Desktop Check"
                    android:background="@drawable/bg_card_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="2dp"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>




    </LinearLayout>



</ScrollView>